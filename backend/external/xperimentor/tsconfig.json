{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "allowJs": false,
    "sourceMap": true,
    "lib": [
      "es6",
      "dom"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "/src/**/*",
    "src/**/*",
    "src/*",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}